<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".EditShapeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shape_name_textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Shape Name: "
                android:textSize="12sp" />

            <EditText
                android:id="@+id/shape_name_editText"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/shape_name_textView"
                android:inputType="text"
                android:text="Shape1"
                android:textSize="12sp" />

            <Button
                android:id="@+id/shape_update_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:onClick="updateShapeProperty"
                android:text="Update All"
                android:textSize="13sp" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shape_text_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shape Text: "
                android:textSize="12sp" />

            <EditText
                android:id="@+id/shape_text_editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:textSize="12sp" />


        </LinearLayout>
        <!--            TODO: Text Font size/style-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X: "
                android:textSize="12sp" />

            <EditText
                android:id="@+id/shape_X_editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y: "
                android:textSize="12sp" />

            <EditText
                android:id="@+id/shape_Y_editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="W: "
                android:textSize="12sp" />

            <EditText
                android:id="@+id/shape_W_editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H: "
                android:textSize="12sp" />

            <EditText
                android:id="@+id/shape_H_editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:textSize="10sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/shape_script_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Script"
                android:textAlignment="center"
                android:textSize="9sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/shape_hidden_checkBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hidden"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/shape_movable_checkBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Movable"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>